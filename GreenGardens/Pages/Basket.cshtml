@page
@model GreenGardens.Pages.BasketModel
@{
}

<h2>Your Basket</h2>

@if (Model.BasketItem != null && Model.BasketItem.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BasketItem)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your basket is empty.</p>
}
<form method="post" asp-page-handler="Checkout">
    <button type="submit" class="btn btn-primary">Checkout</button>
</form>
