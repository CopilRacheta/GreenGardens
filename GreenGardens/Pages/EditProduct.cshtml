@page "{id:int}"
@model GreenGardens.Pages.EditProductModel
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Item</h1>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />

    <div class="form-group">
        <label>Product Name</label>
        <input asp-for="Product.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label >Product Description</label>
        <input asp-for="Product.Description" class="form-control" />
    </div>

    <div class="form-group">
        <label >Product Price </label>
        <input type="number" asp-for="Product.Price" class="form-control" />
    </div>

    <div class="form-group">
        <label >Product Stock</label>
        <input type="number" asp-for="Product.Stock" class="form-control" />
    </div>

    <div class="form-group">
        <label>Product ExpectedStock</label>
        <input type="number" asp-for="Product.ExpectedStock" class="form-control" />
    </div>

    <div class="form-group">
        <label>Product LoyalityPoints</label>
        <input type="number" asp-for="Product.LoyalityPoints" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
